<div class="teacher-member">
  <div class="container mx-auto p-4">
    <div class="teacher-member-form">
      <h2 class="teacher-member-form-title">
        <%= t('.forgot_your_password') %>
      </h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "teachers/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>

        <%= f.submit t('.send_me_reset_password_instructions'), class: "devise_submit_button" %>
      <% end %>
    </div>
  </div>
</div>