<div class="teacher-member relative pb-8">
  <div class="container p-4 mx-auto">
    <div class="teacher-member-form">
      <h2 class="teacher-member-form-title">註冊</h2>
  
      <%= form_for(User.new, url: students_sign_up_path) do |f| %>
        <div class="field">
          <%= f.label :username, "使用者名稱" %>
          <%= f.text_field :username, autofocus: true %>
        </div>
  
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
  
        <div class="field">
          <%= f.label :password, "密碼（最少6個字）" %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
  
        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
  
        <%= f.submit "註冊" %>
      <% end %>
  
      <div class="member-footer">已經有帳號了？</div>
      <%= render "tenant/shared/links" %>
    </div>
  </div>
</div>