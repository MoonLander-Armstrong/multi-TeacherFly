<div class="relative min-h-screen pt-10 owner-main-container">
  <div class="w-11/12 mx-auto">
		<div class="flex items-center w-full h-16 mt-4">
			<h1 class="inline-block my-4 text-4xl font-extrabold text-primary-300">學校名稱</h1>
			<div class="w-1/3 mx-4 mr-auto">
				<%= render "shared/flash" %>
			</div>
		</div>
    <div>
      <%= form_with(model: @teacher, url: owner_schools_path ) do |form| %>
        <%= form.label :username %>
        <%= form.text_field :username %>
        
        <%= form.label :email %>
        <%= form.text_field :email %>
        
        <%= form.label :school_name %>
        <%= form.text_field :school_name %>
        
        <%= form.label :avatar %>
        <%= form.file_field :avatar %>
        
        <%= form.label :subdomain %>
        <%= form.text_field :subdomain %>

        <%= form.submit %>
      <% end %> 
    </div>
	</div>
</div>