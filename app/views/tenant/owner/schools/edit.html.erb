<div class="relative min-h-screen pt-10 owner-main-container">
  <div class="w-11/12 mx-auto">
    <%= form_with(model: @teacher, url: owner_schools_path ) do |form| %>
      <div class="flex items-center justify-between">
        <h1 class="inline-block my-4 text-4xl font-extrabold text-primary-300">我的學校</h1>
        <%= render "shared/flash" %>
        <div>
          <%= form.button class: "owner-course-btn" do %>
            <i class="mr-4 fa-solid fa-arrow-rotate-right"></i>更新資訊
          <% end %>
        </div>  
      </div>
      <div class="md:flex">
        <div class="self-start p-8 bg-white rounded md:w-1/2 md:mr-2">
          <div class="mb-4 lg:items-center lg:mb-0">
            <div class="relative flex-shrink-0 w-40 h-40 mx-auto mb-8 overflow-hidden rounded-full lg:mb-0 lg:mx-auto field " data-controller="image-label">
              <%= form.label :avatar, class: "avatar-label  block w-40 h-40 rounded-full overflow-hidden cursor-pointer " do %>
                <div class="absolute w-40 h-40 text-white ">
                  <% if @teacher.avatar.attached? %>
                    <%= image_tag url_for(@teacher.avatar), class: "w-40 h-40 object-cover", data: { image_label_target: "preview" } %>
                  <% else %>
                    <div class="flex items-center justify-center w-40 h-40 overflow-hidden bg-gray-300 rounded-full" data-image-label-target="fakeImg">
                      <i class="text-6xl fa-solid fa-user"></i>
                    </div>
                    <img src="" class="hidden object-cover w-40 h-40" data-image-label-target="preview">
                  <% end %>
                </div>
              <% end %>
              <%= form.file_field :avatar, class: "hidden", data: { action: "change->image-label#loadImg", image_label_target: "fileInput" } %>
            </div>
            <div>
              <div class="flex items-center mt-10 mb-4">
                <%= form.label :username, "老師姓名", class: "flex-shrink-0 mr-4" %>
                <%= form.text_field :username %>
              </div>
              <div class="flex items-center mb-4">
                <%= form.label :email, "老師信箱", class: "flex-shrink-0 mr-4" %>
                <%= form.email_field :email %>
              </div>
            </div>
          </div>
        </div>
        <div class="self-start p-8 bg-white rounded md:w-1/2 md:mr-2">
          <div class="mb-4 lg:items-center lg:mb-0">
            <div class="mb-2">學校logo</div>
            <div class="flex-shrink-0 w-full mx-auto mb-8 overflow-hidden h-36 lg:mb-0 lg:mx-auto field" data-controller="image-label">
              <%= form.label :logo, class: "avatar-label relative block w-full h-36 overflow-hidden cursor-pointer" do %>
                <div class="absolute inset-0 w-full mx-auto text-white h-36">
                  <% if @teacher.logo.attached? %>
                    <%= image_tag url_for(@teacher.logo), class: "w-full h-36 object-cover", data: { image_label_target: "preview" } %>
                  <% else %>
                    <div class="flex items-center justify-center w-full overflow-hidden bg-gray-300 h-36 " data-image-label-target="fakeImg">
                      <i class="text-6xl fa-solid fa-school"></i>
                    </div>
                    <img src="" class="hidden object-cover w-full h-36" data-image-label-target="preview">
                  <% end %>
                </div>
              <% end %>
              <%= form.file_field :logo, class: "hidden", data: { action: "change->image-label#loadImg", image_label_target: "fileInput" } %>
            </div>
            <div>
              <div class="flex items-center mt-6 mb-4">
                <%= form.label :school_name, "學校名稱", class: "flex-shrink-0 mr-4" %>
                <%= form.text_field :school_name %>
              </div>
              <div class="flex items-center mb-4">
                <%= form.label :subdomain, class: "flex-shrink-0 mr-4" %>
                <%= form.text_field :subdomain %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>













































