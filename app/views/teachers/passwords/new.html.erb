<h2><%= t('.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions') %>
  </div>
<% end %>

<%= render "teachers/shared/links" %>



<div class="teacher-member">
  <div class="container mx-auto p-4">
    <div class="teacher-member-form">
      <h2 class="teacher-member-form-title">
        <%= t('.forgot_your_password') %>
      </h2>
  
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
  
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>
  
        <%= f.submit t('.send_me_reset_password_instructions'), class: "devise_submit_button" %>
      <% end %>
  
      <div class="member-footer">使用其他方式登入</div>
      <%- resource_class.omniauth_providers.each do |provider| %>
