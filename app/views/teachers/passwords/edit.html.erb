<div class="teacher-member">
  <div class="container mx-auto p-4">
    <div class="teacher-member-form">
      <h2><%= t('.change_your_password') %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, t('.new_password') %><br />
          <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t('.confirm_new_password') %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit t('.change_my_password') %>
        </div>
      <% end %>

      <%= render "teachers/shared/links" %>
    </div>
  </div>
</div>
