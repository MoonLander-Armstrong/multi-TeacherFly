<div class="owner-main-container relative pt-10 min-h-screen">
  <div class="w-11/12 mx-auto">
		<div class="flex items-center w-full h-16 mt-4">
			<h1 class="inline-block my-4 text-4xl font-extrabold text-primary-300">全部課程</h1>
			<div class="w-1/3 mx-4 mr-auto">
				<%= render "shared/flash" %>
			</div>
			<%= link_to new_owner_course_path, class: "owner-course-btn block" do %>
				+ 新增課程
			<% end %>
		</div>
		<table class="mt-6 overflow-hidden rounded-md owner-table shadow-md">
			<thead class="owner-thead">
				<tr>
					<th class="text-left owner-text">課程名稱</th>
					<th class="text-center owner-text">講師</th>
					<th class="text-center owner-text">售價</th>
					<th class="text-center owner-text">授課數</th>
					<th class="text-center owner-text">狀態</th>
				</tr>
			</thead>
			<tbody class="owner-tbody">
				<% @courses.each do |course| %>
					<tr>
						<td class="text-left owner-text text-primary-500">
							<div class="flex items-center">
								<div class="mr-2">
									<span class="text-lg text-primary underline hover:text-primary-200"><%= link_to course.title, information_owner_course_path(course) %></span>
								</div>
							</div>
						</td>
						<td class="px-6 py-6 text-center">
							<div class="flex items-center justify-center">
								<span><%= course.lecturer.name %></span>
							</div>
						</td>
						<td class="px-6 py-3 text-center">
							<div class="flex justify-center item-center">
								<div class="w-4 mr-2">
									<span><%= course.price.zero? ? "Free" : "$#{course.price}" %></span>
								</div>
							</div>
						</td>
						<td class="px-6 py-3 text-center">
							<div class="flex justify-center item-center">
								<div class="w-4 mr-2">
									<span>0</span>
								</div>
							</div>
						</td>
						<td class="flex items-center justify-center px-3 py-6 text-center">
							<div class="mr-2 w-18">
								<span class="tag <%= course.published == "publish" ? "tag-publish" : "tag-draft" %>">
									<%= course.published == "publish" ? "發佈" : "草稿" %>
								</span>
							</div>
							<div class="w-4 mx-4 text-red-400 transform scale-150 hover:text-purple-500">
								<%= link_to  owner_course_path(course), method: "delete", data: { confirm: "確定刪除?" }  do %>
									<svg xmlns="http://www.w3./2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
									</svg>
								<% end %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
